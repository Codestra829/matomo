<div class="getNewPlugins">
    <div class="row">
        {% for plugin in plugins %}
            <div class="col s12">
                <strong class="pluginName" piwik-plugin-name="{{ plugin.name|e('html_attr') }}">{{ plugin.name }}</strong>
                <br />
                {{ plugin.description }}
                {% if not loop.last %}<br /><br />{% endif %}
            </div>
        {% endfor %}
    </div>

    <div class="widgetBody">
        <a href="{{ linkTo({'module': 'CorePluginsAdmin', 'action': 'marketplace'}) }}">View all Marketplace plugins</a>
    </div>
</div>